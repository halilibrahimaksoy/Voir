<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/user_item_shape">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserProfilImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        app:civ_border_color="@color/globalTabSececlt"
        app:civ_border_width="2dp" />
    <TextView
        android:id="@+id/txtUserUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:layout_alignTop="@+id/imgUserProfilImage"
        android:layout_toRightOf="@+id/imgUserProfilImage"
        android:layout_toEndOf="@+id/imgUserProfilImage"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#AAA"
        android:textSize="12dp"
        android:layout_alignTop="@+id/imgUserProfilImage"
        android:layout_toRightOf="@+id/imgUserProfilImage"
        android:layout_toEndOf="@+id/imgUserProfilImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/txtUserLike"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="right"
        android:textColor="@color/globalTabSececlt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"/>


    <ImageView
        android:id="@+id/imgUserLike"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_star" />

</RelativeLayout>
